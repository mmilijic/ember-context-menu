<span class="context-menu__item__label">
  {{#if item.icon}}
    {{fa-icon item.icon class="context-menu__item__icon" ariaHidden=false}}
  {{/if}}
  {{#if item.image}}
    <img src="{{item.image}}" class="context-menu__item__icon" alt="icon"/>
  {{/if}}
  {{item.label}} {{#if _amount}}({{_amount}}){{/if}}
</span>

{{#if item.subActions}}
  {{#unless isDisabled}}
    <ul class="context-menu--sub">
      {{#each item.subActions as |subItem|}}
        {{context-menu-item item=subItem
                            amount=amount
                            itemIsDisabled=itemIsDisabled
                            clickAction=clickAction}}
      {{/each}}
    </ul>
  {{/unless}}
{{/if}}
